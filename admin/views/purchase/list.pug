extends ../layout
block append js
  script(src='/js/table.js')
block content
  .container
    +tableHeader('Purchases','/purchase/create','Create Purchase')
    +alerts()
    form(method='post', role='form')
      table.table.table-striped
        tr
          th
            input#toggle(type='checkbox')
          th Token
          th Hash
          th Extension
          th Referrer
          th Life (After Life) Seconds
          th Expiration Date #{timezone}
        each row in list
          tr
            td
              input(type='checkbox', name='remove[]', value=row._id)
            td.mono
              a(href='/purchase/edit?id=' + row._id)= row._id.split(':')[1]
            td.mono
              a(href='/inventory/edit?id=' + row.hash)= row.hash
            td.mono= row.ext
            td.mono= row.referrer
            td.mono= row.life + '(' + row.afterLife + ')'
            td.mono= momentStandardFormat(row.expirationDate)
      +tableFooter(page,count)
