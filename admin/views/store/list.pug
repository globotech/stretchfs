extends ../layout
block append js
  script(src='/js/table.js')
block content
  .container
    +tableHeader('Stores','/store/create','Create Store')
    +alerts()
    form(method='post', role='form')
      table.table.table-striped
        tr
          th
            input#toggle(type='checkbox')
          th Name
          th Host
          th Port
          th Created
          th Updated
          th Full
          th Active
        each row in list
          tr
            td
              input(type='checkbox', name='remove[]', value=row.name)
            td
              a(href='/store/edit?name=#{row.name}')= row.name
            td= row.host
            td= row.port
            td= new Date(row.createdAt).toDateString()
            td= new Date(row.updatedAt).toDateString()
            td
              +active(row.full)
            td
              +active(row.active)
      +tableFooter(page,count)