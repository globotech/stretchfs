extends ../layout
block append js
  script(src='/js/table.js')
block content
  .container
    div.btn.btn-group.btn-group-justified.bg-info
      h1 Peer:Store
      pre.mono.h4= store.name
    div.btn-group
      div.btn-group.btn-group-justified
        div.btn-group.btn-group-xs
          button.btn Created
            span.badge.mono.leftpad8= momentStandardFormat(store.createdAt)
        div.btn-group.btn-group-xs
          button.btn Updated
            span.badge.mono.leftpad8= momentStandardFormat(store.updatedAt)
    +alerts()
    form.form-horizontal(action='/store/save', method='post', role='form')
      input(type='hidden', name='id', value=store._id)
      .form-group
        label.control-label.col-sm-2 Prism
        .col-sm-10
          .form-control-static
            a(href='/prism/edit?name='+store.prism)= store.prism
      .form-group
        label.control-label.col-sm-2 Name
        .col-sm-10
          .form-control-static= store.name
      .form-group
        label.control-label.col-sm-2 Host
        .col-sm-10
          input.form-control(type='text', name='host', placeholder='Store Host', value=store.host)
      .form-group
        label.control-label.col-sm-2 Port
        .col-sm-10
          input.form-control(type='text', name='port', placeholder='Store Port', value=store.port)
      .form-group
        label.control-label.col-sm-2 Writable
        .col-sm-10
          input(type='checkbox', name='writable', checked=store.writable)
      .form-group
        label.control-label.col-sm-2 Available
        .col-sm-10
          input(type='checkbox', name='available', checked=store.available)
      .form-group
        label.control-label.col-sm-2 Active
        .col-sm-10
          input(type='checkbox', name='active', checked=store.active)
      .form-group
        .col-sm-offset-2.col-sm-10
          button.btn.btn-success(type='submit') Save
