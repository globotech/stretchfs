extends ../layout
block content
  .container
    h2 Create Store
    form.form-horizontal(action='/store/save', method='post', role='form')
      input(type='hidden', name='prism', value=prism.id)
      .form-group
        label.control-label.col-sm-2 Store Name
        .col-sm-10
          input.form-control(type='text', name='name', placeholder='Store Name')
      .form-group
        label.control-label.col-sm-2 Host
        .col-sm-10
          input.form-control(type='text', name='host', placeholder='Store Host')
      .form-group
        label.control-label.col-sm-2 Port
        .col-sm-10
          input.form-control(type='text', name='port', placeholder='Store Port')
      .form-group
        label.control-label.col-sm-2 Full
        .col-sm-10
          input(type='checkbox', name='full', checked=false)
      .form-group
        label.control-label.col-sm-2 Active
        .col-sm-10
          input(type='checkbox', name='active', checked=false)
      .form-group
        .col-sm-offset-2.col-sm-10
          button.btn.btn-success(type='submit') Save